{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "mappers.schema.json",
    "title": "JSON Schema for mapper plugins.",
    "description": "https://docs.meltano.com/concepts/plugins#mappers",
    "type": "object",
    "allOf": [
        {
            "$ref": "common.schema.json"
        },
        {
            "additionalProperties": false,
            "properties": {
                "name": {},
                "pip_url": {},
                "repo": {},
                "namespace": {},
                "label": {},
                "description": {},
                "executable": {},
                "docs": {},
                "commands": {},
                "maintenance_status": {},
                "domain_url": {},
                "keywords": {},
                "variant": {},
                "mappings": {
                    "description": "Name of the invokable mappings and their associated configs.",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "config": {
                                "type": "object"
                            }
                        }
                    },
                    "required": [
                        "config",
                        "name"
                    ]
                },
                "logo_url": {},
                "requires": {}
            }
        }
    ]
}