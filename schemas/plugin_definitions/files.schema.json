{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "files.schema.json",
    "title": "JSON Schema for file bundle plugins.",
    "description": "https://docs.meltano.com/concepts/plugins#file-bundles",
    "type": "object",
    "allOf": [
        {
            "$ref": "../common/common.schema.json"
        },
        {
            "$ref": "../common/files_specific.schema.json"
        },
        {
            "$ref": "hub_metadata.schema.json"
        },
        {
            "additionalProperties": false,
            "properties": {
                "name": {},
                "pip_url": {},
                "repo": {},
                "namespace": {},
                "label": {},
                "description": {},
                "executable": {},
                "settings": {},
                "docs": {},
                "settings_group_validation": {},
                "commands": {},
                "update": {},
                "variant": {},
                "logo_url": {},
                "maintenance_status": {},
                "domain_url": {},
                "keywords": {},
                "definition": {},
                "next_steps": {},
                "settings_preamble": {},
                "usage": {},
                "prereq": {}
            }
        }
    ]
}
